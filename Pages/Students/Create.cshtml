@page
@model WebbilirCRUD.Pages.Students.CreateModel
@{
}
<br />
<h2>Register Student</h2>
<br />
<br />

@if (Model.errorMsg.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMsg</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name:</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="name" placeholder="Name.." value="@Model.studentInfo.Name">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Id:</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="id" placeholder="Student ID.." value="@Model.studentInfo.Id">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Class: </label>
        <div class="col-sm-3">
            <select class="form-control" name="dropdown">
                <option value="">Choose...</option>
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
            </select>
        </div>
    </div>

    @if (Model.scsMsg.Length > 0)
    {
        <div class"row mb-3">
            <div class="col-sm-9">
                <div class="col-sm-9">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>@Model.scsMsg</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>

        </div>
    }

    <div class="row mb-3">
    <div class="col-sm-6 offset-sm-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-secondary ml-2" href="/">Cancel</button>
    </div>
</div>
</form>
